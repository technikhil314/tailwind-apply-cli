{
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-alert": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1,
        "maxBOF": 0
      }
    ],
    "prettier/prettier": "error",
    "semi": [
      "error",
      "always"
    ]
  },
  "globals": {
    "globalThis": true
  },
  "ignorePatterns": [
    "node_modules/"
  ]
}